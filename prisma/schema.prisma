generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model UserTable {
  userID                 String                   @id @default(cuid())
  isPaid                 Boolean                  @default(false)
  isActive               Boolean                  @default(true)
  isDelete               Boolean                  @default(false)
  providerID             String
  userName               String                   @default("User")
  email                  String                   @unique
  password               String
  createdAt              DateTime                 @default(now())
  UserPromptHistoryTable UserPromptHistoryTable[]
}

model UserPromptHistoryTable {
  id        String   @id @default(cuid())
  userID    String
  prompt    String
  r2Key     String
  createdAt DateTime @default(now())
  isDelete  Boolean  @default(false)

  user UserTable @relation(fields: [userID], references: [userID])
}
